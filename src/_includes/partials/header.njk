<header id="header">
    <div class="headerContainer flex">
        <div class="logo">
            <a href="/">{{ site.title }}</a>
        </div>
        <div class="nav">
            <div class="hamburger" id="menu-button">
                <div class="burgerLine"></div>
                <div class="burgerLine"></div>
                <div class="burgerLine"></div>
            </div>
            <ul>
                {% for item in headerMenu %}
                    <li><a href="{{ item.url | url }}" {% if item.external %}target="_blank" rel="noopener" {% endif %}>{{ item.label }}</a></li>
                {% endfor %}  
            </ul>
        </div>    
    </div>
</header>
<div class="mobileMenu" id="mobile-menu">
    <ul id="menu-list">
        {% for item in headerMenu %}
            <li><a href="{{ item.url | url }}" {% if item.external %}target="_blank" rel="noopener" {% endif %}>{{ item.label }}</a></li>
        {% endfor %}  
    </ul>
</div>